package week1_0329;

import java.util.Scanner;

public class BaskinRobinsGame {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int randomNumber = (int)Math.random()*3;
		int countNumber = 0;
			System.out.println("======배스킨라빈스 게임을 시작합니다.======");
		while(true) {
			System.out.print("자신이 입력할 숫자를 입력하세요.>>");
			String selectCount = sc.nextLine();
			try {
				int count = Integer.parseInt(selectCount);
				switch(count) {
				case 1:
					System.out.print(count+"\n");
					countNumber += 1;
				case 2:
					for(int i=1; i<=2; i++) {
						countNumber ++i;
						System.out.print(countNumber+"\n");
					}
				case 3:
					for(int i=1; i<=3; i++) {
						countNumber ++;
						System.out.print(countNumber+"\n");
					}
				}
			}catch(Exception e) {
				
			}
			switch(randomNumber) {
			case 1:
				countNumber += 1;
			case 2:
				for(int i=1; i<=2; i++) {
					countNumber += i;
					System.out.print(countNumber+"\t");
					continue;
				}
			case 3:
				for(int i=1; i<=3; i++) {
					countNumber += 3;
					System.out.print(countNumber+"\t");
					continue;
				}
			}
		}
	}

}
